@{
    Layout="Shared/_Layout.cshtml";
}

<h2>All Bands</h2>
@if (Model.Count == 0)
{
    <h4>No bands have been added yet!</h4>
}
else
    <ul>
    @foreach (var band in Model)
    {
    <li><a href="/bands/@band.GetId()">@band.GetName()</a> | <a href="/band/delete/@band.GetId()">Delete</a></li>
    }

<form action="/bands/delete" method="post">
<button class="btn btn-lg btn-primary" type="submit">Clear All Bands</button>
</form>

<h3><a href="/venues/new">Add A Venue</a> | <a href="/bands/new">Add A Band</a> | <a href="/">Return Home</a></h3>
