@{
    Layout="Shared/_Layout.cshtml";
}

<h2>All Venues</h2>
@if (Model.Count == 0)
{
    <h4>No venues have been added yet!</h4>
}
else
    <ul>
    @foreach (var venue in Model)
    {
    <li><a href="/venues/@venue.GetId()">@venue.GetName()</a> | <a href="/band/delete/@venue.GetId()">Delete</a></li>
    }

<form action="/venues/delete" method="post">
<button class="btn btn-lg btn-primary" type="submit">Clear All Bands</button>
</form>

<h3><a href="/venues/new">Add A Venue</a> | <a href="/">Return Home</a> | <a href="/bands/new">Add A Band</a></h3>
