@{
    Layout="Shared/_Layout.cshtml";
}

<div class="container">
    <h2>All Venues</h2>
    @if (Model.Count == 0)
    {
        <h4>No venues have been added yet!</h4>
    }

    else
        @foreach (var venue in Model)
        {
            <h4><a href="/venues/@venue.GetId()">@venue.GetName()</a> | <a href="/venue/edit/@venue.GetId()">Edit</a> | <a href="/venue/delete/@venue.GetId()">Delete</a></h4>
        }
    <form action="/venues/delete" method="post">
        <button class="btn btn-lg btn-primary" type="submit">Clear All Venues</button>
    </form>

    <h3><a href="/venues/new">Add A Venue</a> | <a href="/">Return Home</a> | <a href="/bands/new">Add A Band</a></h3>
</div>
