@{
    Layout="Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Add A New Venue</h1>

    <form action="/venues" method="post">
    <div class="form-group">
      <label for="venue-name">Venue Name:</label>
      <input id="venue-name" name="venue-name" type="text" size="35">
    </div>
    <div class="form-group">
    <label for="band-id">Add A Band:</label>
    <select name="band-id">
        @foreach (var band in Model)
        {
            <option value="@band.GetId()">@band.GetName()</ooption>
        }
    </select>
    </div>
    <button class="btn btn-lg btn-primary" type="submit">Add New Venue</button>
    </form>
    
    <h3><a href="/venues/new">Add A Venue</a> | <a href="/">Return Home</a> | <a href="/bands/new">Add A Band</a></h3>
</div>
